{
  "openapi": "3.1.0",
  "info": {
    "title": "Example Template API",
    "description": "",
    "contact": {
      "name": "Kirill Udaltsov",
      "email": "me@udaltsovk.ru"
    },
    "license": {
      "name": ""
    },
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "/",
      "description": "Default server"
    }
  ],
  "paths": {
    "/user/sign-up": {
      "post": {
        "tags": [
          "B2C"
        ],
        "summary": "Регистрация нового пользователя",
        "description": "Регистрирует нового пользователя и возвращает токен доступа.",
        "operationId": "sign_up",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateJsonUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Пользователь успешно зарегистрирован.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonUserSession"
                }
              }
            }
          },
          "400": {
            "description": "невалидный JSON, неподдерживаемый Content-Type",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericJsonError"
                }
              }
            }
          },
          "409": {
            "description": "Такой email уже зарегистрирован в системе",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonError"
                }
              }
            }
          },
          "422": {
            "description": "поля не прошли валидацию",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationJsonError"
                }
              }
            }
          }
        }
      }
    },
    "/user/sign-in": {
      "post": {
        "tags": [
          "B2C"
        ],
        "operationId": "log_in",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateJsonSession"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonUserSession"
                }
              }
            }
          },
          "400": {
            "description": "невалидный JSON, неподдерживаемый Content-Type",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericJsonError"
                }
              }
            }
          },
          "401": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonError"
                }
              }
            }
          }
        }
      }
    },
    "/user/profile": {
      "get": {
        "tags": [
          "B2C"
        ],
        "operationId": "get_profile",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonUser"
                }
              }
            }
          },
          "401": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonError"
                }
              }
            }
          }
        },
        "security": [
          {
            "user": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "CreateJsonSession": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "description": ""
          },
          "password": {
            "type": "string",
            "description": ""
          }
        }
      },
      "CreateJsonUser": {
        "type": "object",
        "required": [
          "name",
          "surname",
          "email",
          "password",
          "other"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "",
            "examples": [
              "Мария"
            ],
            "maxLength": 100,
            "minLength": 1
          },
          "surname": {
            "type": "string",
            "description": "",
            "examples": [
              "Федотова"
            ],
            "maxLength": 120,
            "minLength": 1
          },
          "email": {
            "type": "string",
            "format": "idn-email",
            "description": "",
            "examples": [
              "cu_fan@edu.hse.ru"
            ],
            "maxLength": 120,
            "minLength": 8
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "",
            "examples": [
              "HardPa$$w0rd!iamthewinner"
            ],
            "maxLength": 60,
            "minLength": 8,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\\\d)(?=.*[@$!%*?&])[A-Za-z\\\\d@$!%*?&]{8,}$"
          },
          "avatar_url": {
            "type": [
              "string",
              "null"
            ],
            "format": "uri",
            "description": "Ссылка на фото пользователя",
            "examples": [
              "https://cdn2.thecatapi.com/images/3lo.jpg"
            ],
            "maxLength": 350
          },
          "other": {
            "$ref": "#/components/schemas/JsonUserTargetSettings"
          }
        }
      },
      "FieldError": {
        "type": "object",
        "required": [
          "field",
          "issue"
        ],
        "properties": {
          "field": {
            "type": "string"
          },
          "issue": {
            "type": "string"
          },
          "rejectedValue": {}
        }
      },
      "GenericJsonError": {
        "allOf": [
          {
            "$ref": "#/components/schemas/JsonErrorStruct"
          },
          {
            "type": "object",
            "properties": {
              "context": {}
            }
          }
        ]
      },
      "JsonError": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/GenericJsonError"
          },
          {
            "$ref": "#/components/schemas/ValidationJsonError"
          }
        ]
      },
      "JsonErrorStruct": {
        "type": "object",
        "required": [
          "code",
          "message",
          "traceId",
          "timestamp",
          "path"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "traceId": {
            "type": "string",
            "format": "uuid"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "path": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "JsonUser": {
        "type": "object",
        "required": [
          "name",
          "surname",
          "email",
          "other"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": ""
          },
          "surname": {
            "type": "string",
            "description": ""
          },
          "email": {
            "type": "string",
            "description": ""
          },
          "avatar_url": {
            "type": [
              "string",
              "null"
            ],
            "description": ""
          },
          "other": {
            "$ref": "#/components/schemas/JsonUserTargetSettings"
          }
        }
      },
      "JsonUserSession": {
        "type": "object",
        "required": [
          "token"
        ],
        "properties": {
          "token": {
            "type": "string",
            "description": "Токен доступа для авторизованных запросов. После успешной аутентификации СТАРЫЕ ТОКЕНЫ ПЕРЕСТАЮТ РАБОТАТЬ.",
            "examples": [
              "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJleHAiOjE3Njg1ODE1MjMsImlhdCI6MTc2ODU3NzkyMywic3ViIjoiMDE5YmM2ZGEtM2Y0Yi03MTcwLTg4NDItMDMzY2MwZjA0ZTUwIiwicm9sZSI6IlVTRVIiLCJqdGkiOiIwMTliYzc3NS03ODI3LTc2NDEtODdmYy00YzlkYTc5ODlkZGEifQ.MCS_MLo8g4CciJ--qxXfBgPflVrhmmbdd4J9zqq69Sk"
            ]
          }
        }
      },
      "JsonUserTargetSettings": {
        "type": "object",
        "description": "Таргет настройки пользователя",
        "required": [
          "age",
          "country"
        ],
        "properties": {
          "age": {
            "type": "integer",
            "format": "u-int8",
            "description": "Возраст пользователя",
            "examples": [
              13
            ],
            "maximum": 100,
            "minimum": 0
          },
          "country": {
            "type": "string",
            "format": "iso-3166-alpha-2",
            "description": "Страна пользователя в формате ISO 3166-1 alpha-2, регистр может быть разным. Страна с данным кодом должна обязательно существовать.",
            "examples": [
              "ru"
            ]
          }
        }
      },
      "ValidationJsonError": {
        "allOf": [
          {
            "$ref": "#/components/schemas/JsonErrorStruct"
          },
          {
            "type": "object",
            "required": [
              "fieldErrors"
            ],
            "properties": {
              "fieldErrors": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/FieldError"
                }
              }
            }
          }
        ]
      }
    },
    "securitySchemes": {
      "user": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "B2C",
      "description": ""
    }
  ]
}